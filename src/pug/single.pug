        a.c-works-slider__button.c-works-slider__close-button.c-works-slider__hide-target.js-works-slider__hide-target.js-change-color-target.js-works-close-button.js-hover(href!="<?= home_url( '/' ); ?>" aria-label="ホームページに移動")
